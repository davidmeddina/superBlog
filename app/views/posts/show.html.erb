<h1>Post</h1>

<p><%= @post.title %></p>
<p><%= @post.content %></p>
<p>Categoria: <%= @post.category.name %></p>


<% if user_signed_in? %>
  <% if current_user.id == @post.user.id %>
      <%= link_to  "Editar", edit_post_path(@post) %> |
      <%= link_to  "Eliminar", post_path(@post), method: :delete, data: {confirm: "Está seguro de eliminar este artículo?"}  %>
  <% end %>
<% end %>


<%= render @post.comments %>
<% if user_signed_in? %>
  <%= render 'comments/form' %>
<% end %>

<b><%= link_to  "Volver al home", posts_path  %></b>
