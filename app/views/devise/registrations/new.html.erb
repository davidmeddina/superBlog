<div class="container">
  <div class="row my-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="jumbotron mt-5 mx-auto w-75">

        <h2 class="text-center"><strong>Registarme</strong></h2>
        <div class="my-2">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, "Correo" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "ContraseÃ±a" %>
            <% if @minimum_password_length %>
            <em class="text-muted">(<%= @minimum_password_length %> caracteres minimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field pl-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recordarme" %>
          </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Registrar", class:"btn btn-primary float-right" %>
          </div>
          <% end %> 
          <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

